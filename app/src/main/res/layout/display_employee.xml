<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_employee_id"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="bold" />
            <TextView
                android:layout_below="@+id/tv_employee_id"
                android:id="@+id/tv_username"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:layout_below="@id/tv_username"
                android:id="@+id/tv_Email"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="bold" />
            <TextView
                android:layout_below="@id/tv_Email"
                android:id="@+id/tv_mobileno"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="bold" />
            <TextView
                android:layout_below="@id/tv_mobileno"
                android:id="@+id/tv_department"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="bold" />
            <TextView
                android:layout_below="@id/tv_department"
                android:id="@+id/tv_role"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="bold" />
            <TextView
                android:layout_below="@id/tv_role"
                android:id="@+id/tv_joiningdate"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="bold" />
            <TextView
                android:layout_below="@id/tv_joiningdate"
                android:id="@+id/tv_adress"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="bold" />
            <TextView
                android:layout_below="@+id/tv_adress"
                android:id="@+id/tv_adress2"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:textStyle="bold" />





        </RelativeLayout>

        <ImageView
            android:id="@+id/edit_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/edit" />

        <ImageView
            android:id="@+id/delete_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/delete" />

    </LinearLayout>

</androidx.cardview.widget.CardView>